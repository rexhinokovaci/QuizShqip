<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="0dp"
        android:background="@color/realWhiteColor"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPageId">


        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/buttonforplay"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/open_sans_bold"

            android:text="@string/play"
            android:textColor="@color/realWhiteColor"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="15sp" />

<!--        android:onClick="OpenConfirmation"-->


        <TextView
            android:id="@+id/textView_highScore"
            android:layout_width="174dp"

            android:layout_height="wrap_content"
            android:layout_above="@+id/spinner_difficulty"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="59dp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/greyShadeColor"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_difficulty"
            android:layout_width="40dp"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:layout_above="@+id/buttonConfirm"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="25dp"
            />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPageId"
        android:layout_width="0dp"
        android:layout_height="401dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/realWhiteColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--    <a href='https://www.freepik.com/psd/business'>Business psd created by freepik - www.freepik.com</a>-->






</androidx.constraintlayout.widget.ConstraintLayout>